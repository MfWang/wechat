/**index.wxss**/
.container{
  height: 100vh;
}
.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-right: 50rpx;
  margin-left: 50rpx;
}

.userinfo-nickname {
  color: #aaa;
}
.develop-network{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: center;
  margin: 25rpx 0 0 0;
  background: #fff;
}
.develop-network-item{
  width: 100%;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
  line-height: 2;
  padding: 15rpx 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.block-img{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 50rpx;
}
.block-text{
  font-size: 30rpx;
  width: 100%;
  position: relative;
}
.block-text:after{
  content: '>';
  position: absolute;
  right: 50rpx;
  top: 0;
  color: #ccc;
}