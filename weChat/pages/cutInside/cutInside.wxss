.cropper-buttons{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  top: calc(100vh - 100rpx);
  left: 0;
  font-size: 24rpx;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.95);
  color: #fff;
}

.cropper-buttons .button{
    width: 33.3%;
    text-align: center;
}
