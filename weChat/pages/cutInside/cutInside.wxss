.pages{
  position: relative;
}
.cropper-wrapper{
  width: 100%;
  height: calc(100vh - 100rpx);  
}
.cropper{
  background: rgba(0,0,0,0.8);
  width: 100%;
  height: 100%;
  position: relative;
}
.cover-img{
  position: absolute;
  top: 300rpx;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 50rpx;
  background: url('http://att2.citysbs.com/hangzhou/image/day_081106/middle_20081106_c28e7844d9b2ed399bbczejxNUqjwiHB.jpg') no-repeat center;
}
.tips{
  width: 100%;
  position: absolute;
  top: 200rpx;
