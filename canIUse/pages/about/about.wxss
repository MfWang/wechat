page {
	padding-bottom: 20rpx;
}
.title {
	display: block;
	padding: 20rpx 0;
	text-align: center;
	font-size: 40rpx;
}
.title text {
	display: inline-block;
	height: 50rpx;
	overflow: hidden;
	padding: 10rpx 30rpx;
	line-height: 50rpx;
	border-radius: 4rpx;
	background: rgba(255,255,255,0.1);
	box-shadow: 1px 1px 0 #4D4537 inset;
}
.intro {
	padding: 0 20rpx;
}
.intro text {
	display: block;
	padding-bottom: 20rpx;
	line-height: 1.5;
	font-size: 32rpx;
	color: #CFB78B;
	word-break: break-all;
	word-wrap:break-word;
}
.intro text text {
	display: inline;
	color: #DB8000;
}
.updata_time {
	height: 42rpx;
	overflow: hidden;
	margin-bottom: 10rpx;
	line-height: 46rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
}
.intro .updataBtn {
	display: block;
	padding: 20rpx;
	margin:0 20rpx;
	text-align: center;
	line-height: 32rpx;
	font-size: 32rpx;
	border-radius: 8rpx;
	color: #fff;
	background-color: #DB5600;
}