
  <view class="guide">
    <block wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="key">
      <view class="guide_item">
        <view class="guide_item_title {{index == activeIndex ? 'guide_item_title_show' : ''}}" bindtap="toggleShow" data-wepy-params-a="{{index}}">
          <span class="iconfont icon-guide_icon_heart"/>
          <text class="title">{{item.title}}</text>
        </view>

        <view class="guide_item_content {{index == activeIndex ? 'guide_item_content_show' : ''}}">

          <view class="guide_content {{index == activeIndex ? 'guide_content_show' : ''}}">

            <block  wx:if="{{item.img}}">
              <image class="guide_img" src="{{item.img}}"/>
            </block>

            <block wx:for="{{item.items}}" wx:for-index="index" wx:for-item="items" wx:key="guide_items_{{index}}">
              <text class="guide_text">{{items}}</text>
            </block>

            <block  wx:if="{{item.tip}}">
              <text class="guide_text_tip">{{item.tip}}</text>
            </block>

          </view>

        </view>
      </view>
    </block>
  </view>