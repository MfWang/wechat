
  <view class="today">
    <view class="tips">
      <image class="bg_shadow" src="../images/bg_shadow.png"/>
      <view class="tips_content">
        <image class="tips_img" src="../images/tips.png"/>
        <image class="bell_img" src="../images/bell.png"/>
        <block  wx:if="{{index == 5}}">
          <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000" circular="true" indicator-color="#FCD0E2" indicator-active-color="#fff">
            <block wx:for="{{guide[index]}}" wx:for-index="index" wx:for-item="item" wx:key="key">
              <swiper-item class="item">
                <text wx:if="{{item.desc}}" class="desc">{{item.desc}}</text>
                <text wx:if="{{item.desc2}}" class="desc2">{{item.desc2}}</text>
              </swiper-item>
            </block>
          </swiper>
        </block>

        <block  wx:else>
          <view>
            <text wx:if="{{guide[index].desc}}" class="desc">{{guide[index].desc}}</text>
            <text wx:if="{{guide[index].desc2}}" class="desc2">{{guide[index].desc2}}</text>
          </view>
          <button wx:if="{{index == 0}}" class="setting" bindtap="setting">去设置</button>
        </block>

      </view>
    </view>

    
  <view class="record_list">
    <block  wx:for="{{$record$records}}" wx:key="records_{{index}}">
      <view wx:if="{{item.dateFlag && $record$date}}" class="date">{{item.date}}</view>
      <view class="record_list_item {{item.lineTag ? 'line' : ''}}">
        <text class="time">{{item.time}}</text>
        <view class="content">
          <view class="flex-row {{item.classname}}">
            <text class="type">{{item.type }}\n<text class="number">LH{{item.lh}}</text></text>
            <image class="item_img" src="{{item.imgUrl}}"/>
          </view>
          <view wx:if="{{item.tip && $record$tip}}" class="tip">发生强转弱，可能排卵</view>
        </view>
      </view>
    </block>
  </view>


    <button class="photo" bindtap="takePhoto"><text class="iconfont icon-btn_camera"/>智能记录排卵试纸</button>

  </view>